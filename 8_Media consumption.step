## Blu-ray support in VLC
while true; do
    read -p "Do you want to install Blu-ray support for VLC? (y/n) " yn
    case $yn in
        [Yy]*)
            sudo apt-get install -y libaacs0 libbluray-bdj libbluray1
            sudo apt-get dist-upgrade -y
            mkdir -p ~/.config/aacs/
            cd ~/.config/aacs/ && wget http://vlc-bluray.whoknowsmy.name/files/KEYDB.cfg
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done

## Spotify
while true; do
    read -p "Do you want to install Spotify? (y/n) " yn
    case $yn in
        [Yy]*)
            echo -e "\n## Spotify\ndeb http://repository.spotify.com stable non-free" | sudo tee -a /etc/apt/sources.list && sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 94558F59
            sudo apt-get update
            sudo apt-get install -y spotify-client
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done
