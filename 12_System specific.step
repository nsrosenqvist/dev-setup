## Samsung tools
while true; do
    read -p "Are you using a Samsung laptop and want samsung-tools installed? (y/n) " yn
    case $yn in
        [Yy]*)
            add_ppa voria/ppa
            sudo apt-get update
            sudo apt-get install -y samsung-tools xbindkeys-config
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done

## Intel drivers
while true; do
    read -p "Are you using Intel graphics and want to use the workaround for screen tearing (https://bugs.freedesktop.org/show_bug.cgi?id=37686)? (y/n) " yn
    case $yn in
        [Yy]*)
            echo "CLUTTER_PAINT=disable-clipped-redraws:disable-culling" | sudo tee -a /etc/environment
            echo "CLUTTER_VBLANK=True" | sudo tee -a /etc/environment
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done

## Laptop-mode-tools
while true; do
    read -p "Do you want to install laptop-mode-tools and powertop for better power management on laptops? (y/n) " yn
    case $yn in
        [Yy]*)
            if [ "$release_name" = "trusty" ]; then
                cd ~/Downloads && wget "http://ppa.launchpad.net/webupd8team/unstable/ubuntu/pool/main/l/laptop-mode-tools/laptop-mode-tools_1.65-1~webupd8~trusty1_all.deb" && sudo dpkg -i laptop-mode-tools_1.65-1*
            else
                sudo apt-get install -y laptop-mode-tools
            fi

            sudo apt-get install -y cpufrequtils powertop
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done
