## Intel drivers
while true; do
    read -p "Are you using Intel graphics and want to enable Tear-Free mode (https://bugs.freedesktop.org/show_bug.cgi?id=37686)? (y/n) " yn
    case $yn in
        [Yy]*)
            echo "Section \"Device\""						| sudo tee -a /etc/X11/xorg.conf 
			echo "   Identifier  \"Intel Graphics\""		| sudo tee -a /etc/X11/xorg.conf 
			echo "   Driver      \"intel\""					| sudo tee -a /etc/X11/xorg.conf 
			echo "   Option      \"AccelMethod\" \"sna\""	| sudo tee -a /etc/X11/xorg.conf 
			echo "   Option      \"TearFree\" \"true\""		| sudo tee -a /etc/X11/xorg.conf 
			echo "EndSection"								| sudo tee -a /etc/X11/xorg.conf 
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done

## Laptop-mode-tools
while true; do
    read -p "Do you want to install power management tools for laptops? (y/n) " yn
    case $yn in
        [Yy]*)
            sudo apt-get install -y laptop-mode-tools cpufrequtils powertop
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done
