## Add PPA's
add_ppa stebbins/handbrake-releases

## Update + upgrade
sudo apt-get update
sudo apt-get dist-upgrade -y

## Install
sudo apt-get install -y pitivi kdenlive kdenlive-data
sudo apt-get install -y devede
sudo apt-get install -y blender
sudo apt-get install -y handbrake-gtk avidemux avidemux-plugins-gtk

## SimpleScreenRecorder
while true; do
    read -p "Do you want to install simplescreenrecorder? (y/n) " yn
    case $yn in
        [Yy]*)
            add_ppa maarten-baert/simplescreenrecorder
            sudo apt-get update
            sudo apt-get install -y simplescreenrecorder simplescreenrecorder-lib:i386
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done
