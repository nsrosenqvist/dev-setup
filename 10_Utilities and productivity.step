## Add PPA's
add_ppa libreoffice/ppa

## Enable partner repository
sudo sed -i "/^# deb .*partner/ s/^# //" /etc/apt/sources.list

## Install ownCloud repositories
sudo sh -c "echo 'deb http://download.opensuse.org/repositories/isv:/ownCloud:/desktop/Ubuntu_${release_version}/ /' > /etc/apt/sources.list.d/owncloud-client.list"
wget -qO - "http://download.opensuse.org/repositories/isv:ownCloud:desktop/Ubuntu_16.10/Release.key" | sudo apt-key add -

## Update + upgrade
sudo apt-get update
sudo apt-get dist-upgrade -y

## Install
sudo apt-get install -y libreoffice-style-sifr impressive pdfsam
sudo apt-get install -y remmina deluge
sudo apt-get install -y stellarium cheese mkvtoolnix-gui
sudo apt-get install -y skype nautilus-dropbox owncloud-client
sudo apt-get install -y gnome-gmail
