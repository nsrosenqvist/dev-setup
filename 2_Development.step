## Databases
MYSQL_INSTALLED=1
SQLITE_INSTALLED=1

while true; do
    read -p "Do you want to install databases? (y/n) " yn
    case $yn in
        [Yy]*)
            echo -e "\nMySQL"
            echo -e "SQLite"
            echo ""
            read -p "Enter the databases you want to install: " input
            DBS=("$input")

            # Install the selected editors
            for i in "${DBS[@]}"; do
                case "${i,,}" in
                    mysql)
                    	MYSQL_INSTALLED=0
                        sudo apt-get install -y mysql-server
					;;
                    sqlite)
                    	SQLITE_INSTALLED=0
                        sudo apt-get install -y sqlite sqliteman
                    ;;
                esac
            done
            break
        ;;
        [Nn]*) break;;
    esac
done

## PHP
while true; do
    read -p "Do you want to install PHP? (y/n) " yn
    case $yn in
        [Yy]*)
            sudo apt-get install -y php-cli php-common php-curl php-json php-mcrypt php-gd
            sudo phpenmod mcrypt
            
            if [ $MYSQL_INSTALLED -eq 0 ]; then
            	sudo apt-get install -y php-mysql
            fi
            
            if [ $SQLITE_INSTALLED -eq 0 ]; then
            	sudo apt-get install -y php-sqlite3
            fi

            # Composer
            curl -sS https://getcomposer.org/installer | sudo php -- --install-dir=/usr/bin --filename=composer

            # Add ~/.composer/vendor/bin to path
            echo "" >> ~/.bashrc
            echo "## Add ~/.composer/vendor/bin to path" >> ~/.bashrc
            echo 'export PATH="$HOME/.composer/vendor/bin:$PATH"' >> ~/.bashrc

            # Add Laravel alias
            echo "" >> ~/.bashrc
            echo "## Add Laravel aliases" >> ~/.bashrc
            echo "alias artisan=\"php artisan\"" >> ~/.bashrc

            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done

