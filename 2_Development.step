## Java
while true; do
    read -p "Do you want to install Oracle Java? (Y/n)" yn
    case $yn in
        [Yy]*)
            sudo apt-add-repository ppa:webupd8team/java
            sudo apt-get update
            sudo apt-get install oracle-java8-installer
        ;;
        [Nn]*)
            ## OpenJDK
            while true; do
                read -p "Do you want to install OpenJDK? (Y/n)" yn
                case $yn in
                    [Yy]*)
                        sudo apt-get install -y openjdk-7-jre
                    ;;
                    [Nn]*) break;;
                    *) echo "Please answer yes or no.";;
                esac
            do
            break
        ;;
        *) echo "Please answer yes or no.";;
    esac
do

