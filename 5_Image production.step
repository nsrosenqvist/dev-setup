## Add PPA's
add_ppa inkscape.dev/ppa
add_ppa irie/blender
add_ppa otto-kesselgulasch/gimp
add_ppa pmjdebruijn/darktable-release
add_ppa sunab/sigil-git

## Update + upgrade
sudo apt-get update
sudo apt-get dist-upgrade -y

## Install
sudo apt-get install -y inkscape
sudo apt-get install -y gimp gimp-plugin-registry gimp-data-extras gimp-gmic
sudo apt-get install -y blender
sudo apt-get install -y darktable
sudo apt-get install -y mypaint mypaint-data-extras
sudo apt-get install -y typecatcher
