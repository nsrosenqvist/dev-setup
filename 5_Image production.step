## Add PPA's
add_ppa inkscape.dev/ppa
add_ppa irie/blender
add_ppa pmjdebruijn/darktable-release
add_ppa i2p.packages/i2p #sunab/sigil-git
add_ppa kubuntu-ppa/backports #dimula73/krita
add_ppa dhor/myway #photofilmstrip

# Ask if we should install stable GIMP or the latest development build
while true; do
	read -p "Do you want to install the latest development build of GIMP (warning: unstable)? (y/n) " yn
	case $yn in
		[Yy]*) add_ppa otto-kesselgulasch/gimp-edge; break;;
		[Nn]*) add_ppa otto-kesselgulasch/gimp; break;;
	esac
done

## Update + upgrade
sudo apt-get update
sudo apt-get dist-upgrade -y

## Install
sudo apt-get install -y inkscape
