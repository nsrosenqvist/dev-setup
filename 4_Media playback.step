## Add PPA's
add_ppa tomahawk/ppa
add_ppa videolan/stable-daily

## Update + upgrade
sudo apt-get update
sudo apt-get dist-upgrade -y

## Install
sudo apt-get install -y tomahawk
sudo apt-get install -y vlc
sudo apt-get install -y easytag

## Spotify
while true; do
    read -p "Do you want to install Spotify? (Y/n) " yn
    case $yn in
        [Yy]*)
            echo -e "\n## Spotify\ndeb http://repository.spotify.com stable non-free" | sudo tee -a /etc/apt/sources.list && sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 94558F59
            sudo apt-get update
            sudo apt-get install -y spotify-client
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done

## Netflix
while true; do
    read -p "Do you want to install Netflix? (Y/n) " yn
    case $yn in
        [Yy]*)
            add_ppa pipelight/stable
            sudo apt-get update

            sudo apt-get install -y --install-recommends pipelight-multi
            sudo pipelight-plugin --update
            sudo pipelight-plugin --enable silverlight
            sudo pipelight-plugin --system-check
            sudo apt-get install -y netflix-desktop
            break
        ;;
        [Nn]*) break;;
        *) echo "Please answer yes or no.";;
    esac
done
